@model Stripe_Integration.Models.ManageProduct

@{
    ViewData["Title"] = Model.ProductName;
    Layout = "_Layout";
}

<div class="container py-5" style="margin-top:3rem;">

    <div class="row g-5 align-items-start">

        <!-- IMAGE SECTION -->
        <div class="col-md-6">
            <div class="details-img-box shadow-sm">
                <img src="@Url.Content(Model.ImagePath ?? "~/images/no-image.png")"
                     alt="@Model.ProductName" />
            </div>
        </div>

        <!-- DETAILS SECTION -->
        <div class="col-md-6">
            <h2 class="fw-bold mb-3">
                @Model.ProductName
            </h2>

            <p class="text-muted mb-4">
                @Model.Descriptions
            </p>

            <h3 class="text-success fw-bold mb-3">
                Rs. @Model.Price
            </h3>

            <p class="mb-4">
                <strong>Available Quantity:</strong>
                @Model.Quantity
            </p>

            <div class="d-flex gap-3">
                <a asp-controller="Checkout"
                   asp-action="Index"
                   asp-route-id="@Model.ProductID"
                   class="btn btn-success px-4">
                    Buy Now
                </a>

                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-outline-secondary px-4">
                    Back to Shop
                </a>
            </div>

           
        </div>

    </div>

</div>





