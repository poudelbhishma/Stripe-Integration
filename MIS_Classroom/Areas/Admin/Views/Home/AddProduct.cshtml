@model Stripe_Integration.Models.ManageProduct

@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Add Product</h2>

@using (Html.BeginForm("AddProduct", "Home", FormMethod.Post, 
       new { enctype = "multipart/form-data", @class = "card p-4 shadow-sm" }))
{
    @Html.AntiForgeryToken()

    <!-- Product Name -->
    <div class="mb-3">
        @Html.LabelFor(m => m.ProductName, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
    </div>

    <!-- Description -->
    <div class="mb-3">
        @Html.LabelFor(m => m.Descriptions, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Descriptions, new { @class = "form-control" })
    </div>

    <!-- Price -->
    <div class="mb-3">
        @Html.LabelFor(m => m.Price, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Price, new { 
            @class = "form-control", 
            type = "number", 
            step = "0.01" 
        })
    </div>

    <!-- Quantity -->
    <div class="mb-3">
        @Html.LabelFor(m => m.Quantity, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Quantity, new { 
            @class = "form-control", 
            type = "number" 
        })
    </div>

    <!-- Image Upload -->
    <div class="mb-3">
        <label class="form-label">Product Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <!-- Image Path -->
    <div class="mb-3" style="display:none">
        @Html.LabelFor(m => m.ImagePath, "Image Path", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ImagePath, new { 
            @class = "form-control", 
            placeholder = "/Uploads/product.jpg" 
        })
    </div>

    <!-- Buttons -->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
            <i class="fa fa-save"></i> Save Product
        </button>

        <a href="@Url.Action("ProductList", "Home")" class="btn btn-secondary">
            Back
        </a>
    </div>
}
